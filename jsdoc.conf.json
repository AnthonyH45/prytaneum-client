{
    "tags": {
      "allowUnknownTags": true,
      "dictionaries": ["jsdoc", "closure"]
    },
    "source": {
      "include": ["src/"],
      "includePattern": ".+\\.ts(doc|x)?$",
      "excludePattern": ".+\\.(test|spec).ts"
    },
    "sourceType": "module",
    "plugins": ["plugins/markdown", "better-docs/typescript", "better-docs/component" ],
    "recurseDepth": 10,
    "templates": {
      "better-docs": {
        "name": "My React components"
      }
    },
    "opts": {
      "destination": "docs",
      "recurse": true,
      "readme": "README.md"
    }
  }