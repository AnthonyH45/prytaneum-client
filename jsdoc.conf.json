{
    "tags": {
        "allowUnknownTags": ["component"],
        "dictionaries": ["jsdoc", "closure"]
    },
    "source": {
        "include": ["src/"],
        "includePattern": ".+\\.ts(doc|x)?$",
        "excludePattern": ".+\\.(test|spec).ts"
    },
    "sourceType": "module",

    "recurseDepth": 10,
    "opts": {
        "destination": "docs",
        "recurse": true,
        "readme": "README.md"
    }
}
