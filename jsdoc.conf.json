{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "source": {
        "include": ["src/"],
        "includePattern": ".+\\.ts(doc|x)?$",
        "excludePattern": ".+\\.(test|spec).ts"
    },
    "sourceType": "module",
    "plugins": [
        "plugins/markdown",
        "better-docs/component",
        "better-docs/typescript"
    ],
    "recurseDepth": 10,
    "opts": {
        "template": "node_modules/better-docs",
        "destination": "docs",
        "recurse": true,
        "readme": "README.md"
    }
}
